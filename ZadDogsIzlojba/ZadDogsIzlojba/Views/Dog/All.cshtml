@using ZadDogsIzlojba.Models
@model IEnumerable<DogAllViewModel>

@{
    ViewData["Tite"] = "All";
}
<h1>All Dogs</h1>
<p>
    <a asp-action="Create">Create New Dogs</a>
</p>

<form asp-controller="Dog" asp-action="All" method="get">
    <p>
        Breed: <input type="text" name="SearchStringBreed" />
        Name: <input type="text" name="SearchStringName" />
        <input type="submit" value="Filter" />
    </p>
</form>
<form asp-controller="Dog" asp-action="Sort" method="get">
    
        <input type="submit" value="Sort" />
    
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Picture)" alt="Image" width="100px" />
                @*@Html.DisplayFor(modelItem => item. Picture)*@
            </td>
            
            <td>
                <a asp-action="Read" asp-controller="Dog" asp-route-id="@item.Id">Read</a>
                <a asp-action="Update"  asp-route-id="@item.Id">Update</a>
                <a asp-action="Delete"  asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
