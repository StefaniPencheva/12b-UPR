@using CarShowRoom.Models
@model IEnumerable<CarAllViewModel>

@{
    ViewData["Tite"] = "All";
}
<h1>All Cars</h1>
<p>
    <a asp-action="Create">Create New Cars</a>
</p>

<form asp-controller="Car" asp-action="All" method="get">
    <p>
        Model: <input type="text" name="SearchStringModel" />
        Price: <input type="text" name="searchDoublePrice" />
        <input type="submit" value="Filter" />
    </p>
</form>
<form asp-controller="Car" asp-action="Sort" method="get">

    <input type="submit" value="Sort" />

</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfManufacture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Picture)" alt="Image" width="100px" />
                @*@Html.DisplayFor(modelItem => item. Picture)*@
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.YearOfManufacture)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.Price)
            </td>

            <td>
                <a asp-action="Read" asp-controller="Car" asp-route-id="@item.Id">Read</a>
                <a asp-action="Update" asp-route-id="@item.Id">Update</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

